#!/bin/bash

ftyping() {
    sleep ${2:-0.5}
    case $1 in
    "")
        xdotool windowminimize $(xdotool getactivewindow)
        xdotool type xclip -selection c -o
    ;;
    "?")
         xdotool windowminimize $(xdotool getactivewindow)
         xdotool type "¿"    ;;
    *)
        echo "exception in the case statement"
    ;;
    esac
}

fxclip() {
    case $1 in

    "")
        xclip -selection c -o
    ;;
 
    "?")
        echo "¿" | xclip -selection c
    ;;
    *)
        echo "exception in the case statement"
    ;;
    esac
}

if [ "$1" = "t" ]; then
    ftyping $2 $3
    exit
fi
fxclip $1
